{
  "manifest": {
    "$BASE_DIR": ".",
    "$OUTPUT_DIR": "$BASE_DIR/output",
    "$INPUT_DIR": "$BASE_DIR/input"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstop": 10000.0,
    "dt": 0.1,
    "dL": 1000.0,
    "spike_threshold": 0.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 6.0,
    "v_init": -65.0
  },
  "node_sets": {
    "virt": {
      "model_type": "virtual",
      "exp":"0"
    },
    "ca3e": {
      "pop_name": "CA3e"
    },
    "ca3noise": {
      "pop_name": "bgnoisevirtCA3"
    },
    "dgnoise": {
      "pop_name": "bgnoisevirtDG"
    }    
  },
  "inputs": {
    "exc_spikes": {
      "input_type": "spikes",
      "module": "csv",
      "input_file": "$INPUT_DIR/exp0_input_newest.csv",
      "node_set": "virt"
    },
    "ca3noise": {
      "input_type": "spikes",
      "module": "csv",
      "input_file": "$INPUT_DIR/exp0_ca3_noise.csv",
      "node_set": "ca3noise"
    },
    "dgnoise": {
      "input_type": "spikes",
      "module": "csv",
      "input_file": "$INPUT_DIR/exp0_dg_noise.csv",
      "node_set": "dgnoise"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "${OUTPUT_DIR}",
    "spikes_file": "spikes.h5",
    "spikes_file_csv": "spikes.csv",
    "overwrite_output_dir": true
  },
  "reports": {
      "syn_report": {
      "cells": "hippocampus",
      "variable_name": "W_nmda",
      "module": "netcon_report",
      "sections": "soma",
      "syn_type": "pyr2pyr",
      "file_name": "syns.h5"
    }
  },
  "network": "./circuit_config.json"
}
